<%= stylesheet_link_tag "stylesheet" %>
<div class="frame">
	
		<div id="up_bar_black">
		</div>
		<div id="up_bar_title">TheEscaper<span style="color:#e5c014">s</span>
		</div>

		
<p id="notice"><%= notice %></p>
<div class="report_list">
<p><h1>신고 게시판</h1></p>
<div id="back_to_report"><%= link_to 'Back to Report', new_report_path %></div>
<table id="report_table">
  <thead>
    <tr>
      <th class="report_th">Title</th>
      <th class="report_th">Email</th>
      <th class="report_th">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td id="list_title"><%= report.title %></td>
        <td id="list_email"><%= report.email %></td>
        <td id="list_content"><%= report.content %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: '삭제하시겠습니까?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	
</div>
<br>
</div>
